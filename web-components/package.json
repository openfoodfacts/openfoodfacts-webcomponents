{
  "name": "@openfoodfacts/openfoodfacts-webcomponents",
  "author": "Open Food Facts",
  "license": "LGPL-2.1-or-later",
  "private": false,
  "version": "1.2.1",
  "description": "Reusable Web Components for Open Food Facts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/openfoodfacts/openfoodfacts-webcomponents"
  },
  "exports": {
    ".": {
      "import": "./dist/off-webcomponents.bundled.js",
      "require": "./dist/off-webcomponents.bundled.cjs"
    }
  },
  "types": "dist/types/off-webcomponents.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "MODE=prod npm run translations:build && MODE=prod rollup -c",
    "build:watch": "npm run translations:build && MODE=dev rollup -c -w",
    "build:doc": "rm -rf docs/dist && npm run analyze && npm run build && cp -r dist docs",
    "clean": "rimraf dist && rimraf my-element.{d.ts,d.ts.map,js,js.map} test/my-element.{d.ts,d.ts.map,js,js.map} test/my-element_test.{d.ts,d.ts.map,js,js.map}",
    "lint": "npm run lit-analyzer && npm run lint:eslint",
    "lit-analyzer": "lit-analyzer",
    "lint:eslint": "eslint --config eslint.config.js",
    "lint:eslint:fix": "eslint --config eslint.config.js --fix",
    "translations:update-language-codes": "NODE_PATH=. node scripts/update-language-codes.js",
    "translations:build": "lit-localize build && rollup -c language.rollup.config.js",
    "translations:extract": "npm run translations:update-language-codes && lit-localize extract",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "doc:package": "cp README.md dist/README.md && cp ../LICENSE dist/LICENSE",
    "prepare:package": "rm -rf ./dist && npm run build",
    "publish:package": "npm run prepare:package && npm run doc:package && npm publish --access=public",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\" --outdir docs",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve:doc": "npm run build:doc && wds --watch --config web-doc-server.config.js",
    "test": "npm run test:dev && npm run test:prod",
    "serve:prod": "MODE=prod npm run serve",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "checksize": "rollup -c ; cat off-webcomponents.bundled.js | gzip -9 | wc -c ; rm off-webcomponents.bundled.js"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "dependencies": {
    "@lit-labs/signals": "^0.1.1",
    "@lit/localize": "^0.12.2",
    "@lit/task": "^1.0.2",
    "@panzoom/panzoom": "^4.6.0",
    "lit": "^3.2.1",
    "lit-html": "^3.2.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.9",
    "@lit/localize-tools": "^0.8.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-legacy": "^1.0.0",
    "@web/test-runner": "^0.20.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "glob": "^11.0.1",
    "lit-analyzer": "^2.0.3",
    "prettier": "^3.5.3",
    "rimraf": "^3.0.2",
    "rollup": "^4.34.8",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-summary": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.0"
  },
  "customElements": "custom-elements.json"
}
