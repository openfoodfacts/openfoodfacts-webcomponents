{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "moduleResolution": "bundler",

    "lib": [
      "es2021",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "types": [
      "jest",
      "cropperjs"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}
